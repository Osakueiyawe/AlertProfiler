@model  AlertProfiler.CoreObject.DataTransferObjects.Response

@{
    ViewBag.Title = "Update Subscriber";
}

@section MainContent{

    <div id="page-wrapper" style="margin-left: 0px; margin-right: 0px;">
        <div class="row">
            @if (Model.ResponseCode == "00")
            {
                <div class="alert alert-success alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    <h5>Message: @Model.ResponseMessage</h5>
                </div>
            }

            @if (Model.ResponseCode != "00" && Model.ResponseCode != null)
            {
                <div class="alert alert-danger alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    <h5>Message: @Model.ResponseMessage</h5>
                </div>
            }

            <div class="col-md-12 col-sm-6 col-xs-12">
                <div>
                    <hr>
                    <form action="~/UpdateSubscriber/GetAccountListAction" method="post">
                        <div class="row">

                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <h1 class="page-head-line">Update Subscriber</h1>
                                <div class="panel-body" id="LoginDiv">
                                    <h5>
                                        Please enter phone number
                                    </h5>
                                    <span class="field-validation-valid text-danger" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input autocomplete="off" class="form-control input-sm text-box single-line" id="PhoneNumber" maxlength="32" name="PhoneNumber" placeholder="Enter PhoneNumber" type="text" value="" required>
                                    </div>
                                    <span class="field-validation-valid text-danger" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                                    <div>
                                        <input type="submit" value="Load" class="btn btn-primary btn-xs" title="Click to load Account Details!">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}
