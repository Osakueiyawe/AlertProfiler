@model  AlertProfiler.CoreObject.DataTransferObjects.UpdateMultipleAlertResponse
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_LayoutAlert.cshtml";
}


<div id="page-wrapper" style="margin-left: 0px; margin-right: 0px;">
    <div class="row">


        <div class="col-md-12 col-sm-12 col-xs-12">
            <div>
                <hr>
                <form action="~/UpdateAlert/UpdateProfile" method="post">
                    <div class="row">
                        <h1 class="page-head-line">Account Details</h1>

                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <img src="~/Images/enrolment_icon.jpg" />
                        </div>

                        <div class="col-md-8 col-sm-6 col-xs-12">
                            <div class="panel-body" id="LoginDiv">
                                <h5>@AlertProfiler.WebApp.Resources.SuscribeAlert.EXISTING_PROFILER:</h5>


                                <div class="account-number-container" id="account_number_container">

                                    <div style="margin-bottom: 15px;">
                                        <label>@AlertProfiler.WebApp.Resources.SuscribeAlert.ACCOUNT_NUMBER:</label>
                                        <div class="form-group input-group">
                                            <span style="font-size: 12px; color:firebrick"><strong>@Model.AccountNumber </strong> </span>
                                        </div>


                                        @foreach (var item in Model.CustomAlertModels)
                                        {
                                            if (item.SMS_ALERT_FLG == "Y")
                                            {
                                                <div class="form-group input-group">
                                                    <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" type="checkbox" value="@item.MOBILENO" style="width: 50px;" disabled checked>
                                                    <span style="font-size: 11px;"><strong>@item.MOBILENO</strong></span>
                                                </div>
                                            }
                                            else
                                            {
                                                if (string.IsNullOrEmpty(item.MOBILENO)) { }
                                                else
                                                {
                                                    <div class="form-group input-group">
                                                        <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" type="checkbox" value="@item.MOBILENO" style="width: 50px;" disabled>
                                                        <span style="font-size: 11px;"><strong>@item.MOBILENO</strong></span>
                                                    </div>
                                                }

                                            }


                                            if (item.EMAIL_ALERT_FLG == "Y")
                                            {
                                                <div class="form-group input-group">
                                                    <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" type="checkbox" value="@item.EMAIL" style="width: 50px;" disabled checked>
                                                    <span style="font-size: 11px;"><strong>@item.EMAIL</strong></span>
                                                </div>
                                            }
                                            else
                                            {
                                                if (string.IsNullOrEmpty(item.EMAIL)) { }
                                                else
                                                {
                                                    <div class="form-group input-group">
                                                        <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" type="checkbox" value="@item.EMAIL" style="width: 50px;" disabled>
                                                        <span style="font-size: 11px;"><strong>@item.EMAIL</strong></span>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>

                                </div>

                                <br />
                                <br />
                                <hr />
                                <label>Update Alert below: </label>
                                <span id="accountnumbermessage"></span>
                                @foreach (var item in Model.FinacleAlertDetails.NotificationDetails)
                                {
                                    if (item.PhoneEmail == "EMAIL" && item.SetupType == "Finacle")
                                    {
                                        if (Model.CustomAlertModels.Any(m => m.EMAIL == item.Email && m.EMAIL_ALERT_FLG=="Y"))
                                        {
                                            <div class="form-group input-group">
                                                <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" name="Emails[]" type="checkbox" value="@item.Email" style="width: 50px;" checked>
                                                <span style="font-size: 11px;"><strong>@item.Email</strong></span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-group input-group">
                                                <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" name="Emails[]" type="checkbox" value="@item.Email" style="width: 50px;">
                                                <span style="font-size: 11px;"><strong>@item.Email</strong></span>
                                            </div>
                                        }

                                    }

                                    if (item.PhoneEmail == "PHONE" && item.SetupType == "Finacle")
                                    {
                                        if (Model.CustomAlertModels.Any(m => m.MOBILENO == item.MobileNumber && m.SMS_ALERT_FLG=="Y"))
                                        {
                                            <div class="form-group input-group">
                                                <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" name="MobileNumbers[]" type="checkbox" value="@item.MobileNumber" style="width: 50px;" checked>
                                                <span style="font-size: 11px;"><strong>@item.MobileNumber</strong></span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-group input-group">
                                                <input class="input-sm single-line checkboxAccountNumber" id="AccountNumber" name="MobileNumbers[]" type="checkbox" value="@item.MobileNumber" style="width: 50px;">
                                                <span style="font-size: 11px;"><strong>@item.MobileNumber</strong></span>
                                            </div>
                                        }

                                    }
                                }

                                <input class="input-sm single-line" id="AccountNumber" name="AccountNumber" value="@Model.AccountNumber" type="text" style="width: 50px;" hidden>
                                <input class="input-sm single-line" id="RECID" name="RECID" value="@Model.CustomAlertModels.FirstOrDefault().RECID" type="text" style="width: 50px;" hidden>

                                <label>@AlertProfiler.WebApp.Resources.SuscribeAlert.DESCRIPTION:</label>
                                <div class="form-group input-group">
                                    <textarea cols="5" rows="3" class="form-control input-sm text-box single-line" name="Description" required></textarea>
                                </div>
                                <a href="~/UpdateSubscriber/" class="alert-link btn btn-primary btn-xs float-left" title="Click to go back!"><< Back</a>
                                @if (Model.FinacleAlertDetails.NotificationDetails.Count <= 0)
                                {
                            <button type="submit" class="btn btn-success btn-xs float-right" disabled>@AlertProfiler.WebApp.Resources.SuscribeAlert.SUBMIT_BTN_VALUE</button>
                                }
                                else
                                {
                            <button type="submit" class="btn btn-success btn-xs float-right" id="buttonSubmit">@AlertProfiler.WebApp.Resources.SuscribeAlert.SUBMIT_BTN_VALUE</button>
                                }


                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



